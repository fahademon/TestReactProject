{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@common/*": ["common/*"],
      },
      "module": "ESNext",
      "moduleResolution": "bundler",
      "allowJs": true,            
      "jsx": "react",   
      "noEmit": true   , 
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,   
      "lib": [
          "ES2015",   // brings in Promise, Map, etc.
          "DOM",       // for window, document, fetch, etc.
          "ES2015.Promise"
      ],
      //"types": ["vite/client", "node"],
      //"typeRoots": ["./node_modules/@types/", "./types", "./node_modules"],
    },
    "include": ["*.ts", "common/vite-env.d.ts"]
  }
  